<!-- Tektite  Animations -->
<animations>
	
	<name value = "0" /> 
<name value = "0" /> <!-- Tektite -->

		<IDLE> <!-- Idle -->
			<name value = "0"  />

			<UP> 
				<values name = "0" x ="0" y = "160" w = "32" h = "32" frameNumber = "1" margin = "" pivot_x = "16" pivot_y = "20" flip= "0"/>
			</UP>

			<DOWN> 
				<values name = "1" x ="0" y = "160" w = "32" h = "32" frameNumber = "1" margin = "" pivot_x = "16" pivot_y = "20" flip= "0"/>
			</DOWN>

			<RIGHT> 
				<values name = "2" x ="0" y = "160" w = "32" h = "32" frameNumber = "1" margin = "" pivot_x = "16" pivot_y = "20" flip= "0"/>
			</RIGHT>

			<LEFT> 
				<values name = "3" x ="0" y = "160" w = "32" h = "32" frameNumber = "1" margin = "" pivot_x = "16" pivot_y = "20" flip= "1"/>
			</LEFT>
					
			<loop value = "true" />

			<speed value = "0.15" />

		</IDLE>

		<WALKING> <!-- Walking -->
			<name value = "1"  />

			<UP> 
				<values name = "0" x ="0" y = "160" w = "32" h = "32" frameNumber = "3" margin = "1" pivot_x = "16" pivot_y = "20" flip= "0"/>
			</UP>

			<DOWN> 
				<values name = "1" x ="0" y = "160" w = "32" h = "32" frameNumber = "3" margin = "1" pivot_x = "16" pivot_y = "20" flip= "0"/>
			</DOWN>

			<RIGHT> 
				<values name = "2" x ="0" y = "160" w = "32" h = "32" frameNumber = "3" margin = "1" pivot_x = "16" pivot_y = "20" flip= "0"/>
			</RIGHT>

			<LEFT> 
				<values name = "3" x ="0" y = "160" w = "32" h = "32" frameNumber = "3" margin = "1" pivot_x = "16" pivot_y = "20" flip= "1"/>
			</LEFT>
					
			<loop value = "true" />

			<speed value = "0.2" />

		</WALKING>


</animations>